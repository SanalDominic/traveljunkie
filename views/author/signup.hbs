<img
  class="img-fluid img-back"
  src="/images/bgimage/5ed719559d85627f1a1f8492_travel Tell stencil 2.svg"
  alt="bg-image"
/>

<div class="container">
  <div
    class="d-flex align-items-center justify-content-center"
    style="height: 100vh;"
  >

    <form action="/signup" method="post" style="width: 30rem;">

      <div class="row g-4 text-center">
        <div class="col-12">
          <h3>Sign up to be a <span class="fw-bold">Travel Junkie</span></h3>

        </div>
        <div class="offset-1 col-10 offset-md-2 col-md-8">
          <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quae animi
            vitae hic voluptates dolore
          </p>
        </div>
        <div class="offset-1 col-10 offset-md-0 col-md-6">
          <input
            required
            type="text"
            name="name"
            class="form-control text-field"
            placeholder="Full name"
            aria-label="Full name"
          />
        </div>

        <div class="offset-1 col-10 offset-md-0 col-md-6">
          <input
            required
            type="email"
            name="email"
            class="form-control text-field"
            placeholder="Enter email"
            aria-label="email"
          />
        </div>
        <div class="offset-1 col-10 offset-md-0 col-md-6">
          <input
            required
            type="password"
            name="password"
            class="form-control text-field"
            placeholder="Enter Password"
            aria-label="password"
          />
        </div>

        <div class="offset-1 col-10 offset-md-0 col-md-6">
          <select
            class="form-control text-field text-muted"
            name="place"
            aria-label="Default select example"
          >
            <option selected value="place">place</option>
            <option value="calicut">calicut</option>
            <option value="kannur">kannur</option>
            <option value="thrissur">thrissur</option>
            <option value="wayanad">wayanad</option>
          </select>
        </div>
        <div class="offset-1 col-10 offset-md-6 col-md-6">

          <select
            class="form-control text-field text-muted"
            name="country"
            aria-label="Default select example"
          >
            <option selected value="country">country</option>
            <option value="india">india</option>
          </select>
        </div>

        <div class="offset-1 col-10 offset-md-0 col-md-12">
          {{#if error}}

            <p class="text-danger fw-bold">{{error}}</p>

          {{/if}}
        </div>
        <div class="offset-1 col-10 offset-md-0 col-md-12">
          <button type="submit" class="button sign-in-button small">Sign up</button>
        </div>
        <div class="col-12">
          <label for="signin">Already have an account ?
            <br />
            <span class="ps-3"><a href="/signin">Go to sign in page</a></span></label>
        </div>

      </div>

    </form>
  </div>
</div>